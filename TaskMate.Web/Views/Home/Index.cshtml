@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>7 Days Tasks Manager</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
</head>
<body>
    <div class="container py-3">
        <h1 class="mb-4 text-center text-primary">Weekly Tasks Manager</h1>
        <div class="row g-3">
            <!-- Seven day columns -->
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Sunday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Sunday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Monday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Monday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Tuesday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Tuesday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Wednesday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Wednesday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Thursday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Thursday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Friday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Friday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-1">
                <div data-day="Saturday" class="d-flex flex-column border rounded p-3">
                    <h5 class="text-primary text-center mb-3 border-bottom pb-2">Saturday</h5>
                    <button class="btn btn-primary btn-sm mb-3 add-panel-btn" type="button" aria-label="Add Task">
                        <span class="fw-bold fs-5">+</span> Add Task
                    </button>
                    <div class="initial-input-container"></div>
                    <div class="panels-container flex-grow-1"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
          document.querySelectorAll('.add-panel-btn').forEach(button => {
            button.addEventListener('click', () => {
              const dayColumn = button.closest('[data-day]');
              const initialInputContainer = dayColumn.querySelector('.initial-input-container');
              const panelsContainer = dayColumn.querySelector('.panels-container');

              if (initialInputContainer.childElementCount > 0) return;

              button.style.display = 'none';

              const form = document.createElement('form');
              form.className = 'd-flex align-items-center mb-3 gap-2';

              const input = document.createElement('input');
              input.type = 'text';
              input.className = 'form-control form-control-sm';
              input.placeholder = 'Enter Task title';
              input.required = true;
              input.maxLength = 100;
              input.setAttribute('aria-label', 'Task title');
              form.appendChild(input);

              const submitBtn = document.createElement('button');
              submitBtn.type = 'submit';
              submitBtn.className = 'btn btn-primary btn-sm';
              submitBtn.textContent = 'Add';
              form.appendChild(submitBtn);

              const cancelBtn = document.createElement('button');
              cancelBtn.type = 'button';
              cancelBtn.className = 'btn btn-outline-secondary btn-sm';
              cancelBtn.textContent = 'Cancel';
              form.appendChild(cancelBtn);

              initialInputContainer.appendChild(form);
              input.focus();

              cancelBtn.addEventListener('click', () => {
                initialInputContainer.innerHTML = '';
                button.style.display = 'inline-block';
              });

              form.addEventListener('submit', (e) => {
                e.preventDefault();
                const titleValue = input.value.trim();
                if (!titleValue) return;
                createTaskPanel(panelsContainer, titleValue);
                initialInputContainer.innerHTML = '';
                button.style.display = 'inline-block';
              });
            });
          });

          function createTaskPanel(container, title) {
            const panel = document.createElement('div');
            panel.className = 'border rounded p-2 mb-2 d-flex flex-column';

            const titleEl = document.createElement('div');
            titleEl.textContent = title;
            titleEl.className = 'fw-semibold mb-2';
            panel.appendChild(titleEl);

            const buttonGroup = document.createElement('div');

            const editBtn = document.createElement('button');
            editBtn.type = 'button';
            editBtn.className = 'btn btn-outline-warning btn-sm me-2';
            editBtn.textContent = 'EDIT';
            buttonGroup.appendChild(editBtn);

            const deleteBtn = document.createElement('button');
            deleteBtn.type = 'button';
            deleteBtn.className = 'btn btn-outline-danger btn-sm';
            deleteBtn.textContent = 'DELETE';
            buttonGroup.appendChild(deleteBtn);

            panel.appendChild(buttonGroup);

            const editForm = document.createElement('form');
            editForm.className = 'd-flex gap-2 mt-2';
            editForm.style.display = 'none';

            const editInput = document.createElement('input');
            editInput.type = 'text';
            editInput.className = 'form-control form-control-sm';
            editInput.value = title;
            editInput.required = true;
            editInput.maxLength = 100;
            editForm.appendChild(editInput);

            const submitEditBtn = document.createElement('button');
            submitEditBtn.type = 'submit';
            submitEditBtn.className = 'btn btn-primary btn-sm';
            submitEditBtn.textContent = 'Submit';
            editForm.appendChild(submitEditBtn);

            panel.appendChild(editForm);

            editBtn.addEventListener('click', () => {
              titleEl.style.display = 'none';
              buttonGroup.style.display = 'none';
              editForm.style.display = 'flex';
              editInput.focus();
              editInput.select();
            });

            editForm.addEventListener('submit', (e) => {
              e.preventDefault();
              const newValue = editInput.value.trim();
              if (newValue) {
                titleEl.textContent = newValue;
              }
              titleEl.style.display = 'block';
              buttonGroup.style.display = 'flex';
              editForm.style.display = 'none';
            });

            deleteBtn.addEventListener('click', () => {
              if (confirm('Are you sure you want to delete this Task?')) {
                container.removeChild(panel);
              }
            });

            container.appendChild(panel);
          }
        });
    </script>
</body>
</html>

